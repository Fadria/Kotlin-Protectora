<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@color/fondoGeneral"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ui.content.RevisionsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="BÃºsqueda de animal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_rounded">

        <EditText
            android:id="@+id/etAnimalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/animalId"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRevisions"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/cargarRevisiones"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:cornerRadius="24dp"
        android:layout_marginBottom="30dp"
        />
</LinearLayout>